<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/image_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/deal_image_linear"
        android:layout_width="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:background="#7EEFEBEB"
        android:layout_height="180dp">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/deal_item_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/deal_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintStart_toStartOf="@id/deal_image_linear"
        app:layout_constraintEnd_toEndOf="@id/deal_image_linear"
        app:layout_constraintTop_toBottomOf="@id/deal_image_linear"/>
    <TextView
        android:id="@+id/deal_item_price"
        app:layout_constraintTop_toBottomOf="@id/deal_item_name"
        app:layout_constraintStart_toStartOf="@id/deal_image_linear"
        app:layout_constraintEnd_toEndOf="@id/deal_image_linear"
        android:layout_width="match_parent"
        android:padding="10dp"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>