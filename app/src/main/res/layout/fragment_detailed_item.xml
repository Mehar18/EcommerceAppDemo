<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.deals.DetailedItemFragment">

    <ImageView
        android:id="@+id/detailed_item_image"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/detailed_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintTop_toBottomOf="@id/detailed_item_image"/>

    <TextView
        android:id="@+id/detailed_item_price"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/detailed_item_name"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/detailed_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/detailed_item_price"
        android:backgroundTint="@color/dark_blue"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy now"
        android:id="@+id/buyNow"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/detailed_add_to_cart"
        android:backgroundTint="@color/dark_blue"/>


</androidx.constraintlayout.widget.ConstraintLayout>