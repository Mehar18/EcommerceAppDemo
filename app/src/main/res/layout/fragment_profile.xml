<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22CDCFCF"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:id="@+id/profile_linear"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="180dp">

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/profile"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/name_profile"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:padding="5dp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:padding="5dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="#22CDCFCF"
        app:layout_constraintTop_toBottomOf="@id/profile_linear"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_orders_proile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_item"
            android:drawablePadding="15dp"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:paddingEnd="10dp"
            android:text="My Orders"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:drawableStart="@drawable/clipboard"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_and_security"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_item"
            android:drawablePadding="15dp"
            android:text="Login and Security"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:paddingEnd="10dp"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:drawableStart="@drawable/login"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/your_address_profile"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:paddingEnd="10dp"
            android:background="@drawable/profile_item"
            android:drawablePadding="15dp"
            android:text="Your Address"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:drawableStart="@drawable/address"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_cart_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_item"
            android:drawablePadding="15dp"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:paddingEnd="10dp"
            android:text="My Cart"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:drawableStart="@drawable/baseline_shopping_cart_24"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>